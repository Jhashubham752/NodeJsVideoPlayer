<section id="galleryData">

    <article>
        <div class="grid-container">
        {{#each gallery}} 
        <main class="gallery_card">
           <header  class="gallery_header">
            {{#if (mimetype photo.0.mimetype)}}
            <video controls>
                <source src="{{TrimString photo.0.path}}"/>
            </video>
            {{else}}
            <img src="{{TrimString photo.0.path}}" alt="Shubham"/>
            {{/if}}

           </header>
           <main class="gallery_content">
               <h2>
                   {{photo_name}}
               </h2>
               <p>
                   {{photo_desciption}}
               </p>
               <p>
                   {{CreatedAt}}
               </p>

           </main>
        </main>
        {{/each}}
        </div>
    </article>
</section>